{
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./src",

    "target": "ESNext",
    "useDefineForClassFields": true,
    "declaration": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vite/client", "node"],
    "skipLibCheck": false,
    "allowJs": true,
    "paths": {
      "wasm-core": ["./../wasm-lib/pkg"],
      "wasm-core/*": ["./../wasm-lib/pkg/*"]
    }
  },
  "include": [
    "src/**/*",
    "pkg/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts"
  ]
}
